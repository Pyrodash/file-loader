{
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES2021",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
